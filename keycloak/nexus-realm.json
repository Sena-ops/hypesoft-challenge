      },
      {
        "name": "editor",
        "description": "Editor - pode criar e editar produtos e categorias",
        "composite": false
      },
      {
        "name": "leitor",
        "description": "Leitor - apenas visualização de produtos, categorias e dashboard",
        "composite": false
      },
      {
        "name": "manager",
        "description": "Gerente - pode gerenciar produtos e categorias (compatibilidade)",
        "composite": false
      },
      {
        "name": "user",
        "description": "Usuário comum - apenas visualização (compatibilidade)",
        "composite": false
      }
    ],
    "client": {
      "nexus-frontend": [
        {
          "name": "admin",
          "description": "Administrador do frontend"
        },
        {
          "name": "editor",
          "description": "Editor do frontend"
        },
        {
          "name": "leitor",
