        {
          "name": "editor",
          "description": "Editor da API"
        },
        {
          "name": "leitor",
          "description": "Leitor da API"
        },
        {
          "name": "manager",
          "description": "Gerente da API (compatibilidade)"
        },
        {
          "name": "user",
          "description": "Usuário da API (compatibilidade)"
        }
      ]
    }
  },
  "defaultRoles": ["leitor", "user"],
  "clients": [
    {
      "clientId": "nexus-frontend",
      "name": "Nexus Frontend",
      "description": "Cliente público para o frontend Next.js",
      "enabled": true,
      "publicClient": true,
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "serviceAccountsEnabled": false,
      "authorizationServicesEnabled": false,
      "fullScopeAllowed": true,
      "rootUrl": "http://localhost:3000",
      "baseUrl": "http://localhost:3000",
      "adminUrl": "http://localhost:3000",
      "redirectUris": [
        "http://localhost:3000/*",
        "http://127.0.0.1:3000/*"
      ],
      "webOrigins": [
        "http://localhost:3000",
        "http://127.0.0.1:3000",
        "+"
      ],
      "protocol": "openid-connect",
      "attributes": {
        "pkce.code.challenge.method": "S256",
        "post.logout.redirect.uris": "http://localhost:3000/*"
      },
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access",
        "microprofile-jwt"
      ]
    },
    {
      "clientId": "nexus-api",
      "name": "Nexus API",
      "description": "Cliente confidencial para a API .NET",
      "enabled": true,
      "publicClient": false,
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": false,
      "fullScopeAllowed": true,
