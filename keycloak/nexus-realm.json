      "redirectUris": [
        "http://localhost:5000/*"
      ],
      "webOrigins": [
        "http://localhost:5000",
        "+"
      ],
      "protocol": "openid-connect",
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ]
    }
